<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ api_info.info.title }} Documentation</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            box-sizing: border-box;
        }
        .code-block {
            background: #1e293b;
            border-radius: 8px;
            overflow-x: auto;
        }
        .syntax-highlight .keyword { color: #f472b6; }
        .syntax-highlight .string { color: #34d399; }
        .syntax-highlight .number { color: #fbbf24; }
        .syntax-highlight .comment { color: #94a3b8; }
        .nav-item:hover {
            background: rgba(59, 130, 246, 0.1);
            border-left: 3px solid #3b82f6;
        }
        .nav-item.active {
            background: rgba(59, 130, 246, 0.15);
            border-left: 3px solid #3b82f6;
            color: #3b82f6;
        }
        .method-badge {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            text-transform: uppercase;
        }
        .method-get { background: #dcfce7; color: #166534; }
        .method-post { background: #dbeafe; color: #1e40af; }
        .method-put { background: #fef3c7; color: #92400e; }
        .method-delete { background: #fee2e2; color: #991b1b; }
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <header class="bg-white shadow-sm border-b border-gray-200 fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">API</span>
                </div>
                <h1 class="text-xl font-semibold text-gray-900">{{ api_info.info.title }} Documentation</h1>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-500">v{{ api_info.info.version }}</span>
                <button class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
                    Get API Key
                </button>
            </div>
        </div>
    </header>

    <div class="flex pt-16">
        <nav class="w-64 bg-white h-[calc(100vh-4rem)] fixed left-0 top-16 border-r border-gray-200 overflow-y-auto">
            <div class="p-6">
                <div class="mb-6">
                    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">API Endpoints</h3>
                    <div class="space-y-1">
                        {% for endpoint in api_info.endpoints %}
                            <a href="#{{ endpoint.method | lower }}-{{ endpoint.path | slugify }}" class="nav-item px-3 py-2 text-sm cursor-pointer transition-all">
                                <span class="method-badge method-{{ endpoint.method | lower }}">{{ endpoint.method | upper }}</span> {{ endpoint.path }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </nav>

        <main class="flex-1 ml-64 p-8">
            <div class="max-w-4xl">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ api_info.info.title }}</h1>
                <p class="text-lg text-gray-600 mb-6">{{ api_info.info.description }}</p>
                
                <h2 class="text-2xl font-bold text-gray-900 mb-6">API Reference</h2>
                {% for endpoint in api_info.endpoints %}
                    <section id="{{ endpoint.method | lower }}-{{ endpoint.path | slugify }}" class="endpoint-section fade-in">
                        {% include 'endpoint_template.html.j2' %}
                    </section>
                {% endfor %}
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.endpoint-section');

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const targetId = entry.target.id;
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href') === `#${targetId}`) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, { rootMargin: '-20% 0px -80% 0px' }); // Adjust these values as needed

            sections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>
</body>
</html>