<div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <div class="flex items-center mb-4">
        <span class="method-badge method-{{ endpoint.method | lower }} mr-3">{{ endpoint.method | upper }}</span>
        <code class="text-lg font-mono">{{ endpoint.path }}</code>
    </div>
    
    <p class="text-gray-600 mb-4">{{ endpoint.description }}</p>

    <h4 class="font-semibold text-gray-900 mb-2">Parameters</h4>
    <div class="code-block p-4 mb-4">
        <pre class="text-sm text-gray-300 syntax-highlight">{{ endpoint.parameters | tojson(2) }}</pre>
    </div>

    {% if endpoint.requestBody.content %}
    <h4 class="font-semibold text-gray-900 mb-2">Request Body</h4>
    <div class="code-block p-4 mb-4">
        <pre class="text-sm text-gray-300 syntax-highlight">{{ endpoint.requestBody.content['application/json'].schema | tojson(2) }}</pre>
    </div>
    {% endif %}

    <h4 class="font-semibold text-gray-900 mb-2">Responses</h4>
    <div class="code-block p-4 mb-4">
        <pre class="text-sm text-gray-300 syntax-highlight">{{ endpoint.responses | tojson(2) }}</pre>
    </div>
</div>